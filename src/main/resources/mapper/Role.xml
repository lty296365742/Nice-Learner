<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.learner.mapper.RoleMapper">
    <resultMap id="t_role" type="com.example.learner.bean.Role">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="role" jdbcType="VARCHAR" property="role"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="available" jdbcType="INTEGER" property="available"/>
        <collection property="users"  resultMap="com.example.learner.bean.User"/>
    </resultMap>
    <sql id="Base_Column_List">
        role,description,available
    </sql>

    <select id="findRolesById" parameterType="long" resultType="com.example.learner.bean.Role">
      SELECT * FROM t_role WHERE id = #{id}
    </select>

    <select id="findAll" resultMap="t_role">
        SELECT * FROM t_role
    </select>

    <insert id="add" parameterType="com.example.learner.bean.Role">
        INSERT INTO t_role( <include refid="Base_Column_List" />) VALUES (#{role},#{description},#{available})
    </insert>

    <delete id="delete" parameterType="long">
        DELETE FROM t_role WHERE id = #{id}
    </delete>
</mapper>